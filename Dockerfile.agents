# Dockerfile for Robot Brain Agents Sandbox
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install additional dependencies for LangGraph
RUN pip install --no-cache-dir \
    langgraph \
    langchain \
    langchain-community \
    langchain-ollama

# Copy only necessary files for agents sandbox
COPY robot_personality.py .
COPY simple_api.py .
COPY multi_robot_chat.py .
COPY robot_brain.py .
COPY tools.py .
COPY examples/langgraph-supervisor-py ./langgraph-supervisor/

# Expose port
EXPOSE 8000

# Run the simple API
CMD ["python", "simple_api.py"]